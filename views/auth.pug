extends layout

block content
  h1 #{title}
  h2 login
  form(action="/auth/login" id="login-form" method="post")
    input(type="email" name="email" id="email" placeholder="email address" required)
    input(type="password" name="password" id="password" placeholder="enter password" required)
    button(type="submit" form="login-form") login
  h2 register
  form(action="/auth/register" id="register-form" method="post")
    input(type="text" name="name" id="name" placeholder="enter your name" required)
    input(type="email" name="email" id="email" placeholder="enter your email address" required)
    input(type="password" name="password" id="password" placeholder="choose a password" required)
    input(type="password", name="passwordConfirm" id="passwordConfirm" placeholder="repeat your password" required)
    input(type="text" name="referent" id="referent" placeholder="enter your referal code" required)
    button(type="submit" form="register-form") register
