extends ../layout

block navbar
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    span.navbar-brand.mb-0.h1 #{siteName}
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      .navbar-nav.mr-auto
        a.nav-item.nav-link.active(href="/")
          | Home
          span.sr-only (current)
      .navbar-nav
        .nav-item
          a.nav-link(href="/account")
            img.rounded-circle(src="/account/avatar?size=20", alt="avatar")
            | Account
        a.nav-item.nav-link(href="/logout")
          | Logout

block content
  nav(aria-label='Page navigation')
    ul.pagination.justify-content-center
      if currentPage == 1
        li.page-item.disabled
          a.page-link(href='?page=' + currentPage, tabindex='-1', aria-disabled='true') Previous
      else
        li.page-item
          a.page-link(href='?page=' + (currentPage - 1)) Previous
        if (currentPage - 2 != 0)
          li.page-item
            a.page-link(href='?page=' + (currentPage - 2)) #{currentPage - 2}
        li.page-item
          a.page-link(href='?page=' + (currentPage - 1)) #{currentPage - 1}
      li.page-item.active(aria-current="page")
        span.page-link #{currentPage}
        span.sr-only (current)
      if currentPage == numberOfPages
        li.page-item.disabled
          a.page-link(href='?page=' + currentPage, tabindex='-1', aria-disabled='true') Next
      else
        li.page-item
          a.page-link(href='?page=' + (currentPage + 1)) #{currentPage + 1}
        if (currentPage + 2 <= numberOfPages)
          li.page-item
            a.page-link(href='?page=' + (currentPage + 2)) #{currentPage + 2}
        li.page-item
          a.page-link(href='?page=' + (currentPage + 1)) Next
  .container
    .row
      for product in products
        .col-sm
          p #[b #{product.name}], #[b #{product.price}]â‚¬, #[b #{product.points}] points
          p
            a(href=product.image)
              img.img-thumbnail(src=product.thumbnail, alt=product.name + " thumbnail")
